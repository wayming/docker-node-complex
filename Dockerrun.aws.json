{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "stephengrider/multi-client",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "server",
      "image": "wayming/multi-server",
      "hostname": "api",
      "essential": false,
      "memory": 128,
      "environment": [
        {
          "name": "REDIS_HOST",
          "value": "redis"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        },
        {
          "name": "PGUSER",
          "value": "postgres"
        },
        {
          "name": "PGHOST",
          "value": "postgres"
        },
        {
          "name": "PGDATABASE",
          "value": "postgres"
        },
        {
          "name": "PGPASSWORD",
          "value": "postgres_password"
        },
        {
          "name": "PGPORT",
          "value": "5432"
        }
      ]
    },
    {
      "name": "worker",
      "image": "wayming/multi-worker",
      "hostname": "worker",
      "essential": false,
      "memory": 128,
      "environment": [
        {
          "name": "REDIS_HOST",
          "value": "redis"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        }
      ]
    },
    {
      "name": "nginx",
      "image": "wayming/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["client", "server"],
      "memory": 128
    },
    {
      "name": "postgres",
      "image": "postgres:latest",
      "hostname": "postgres",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 5432,
          "containerPort": 5432
        }
      ],
      "links": ["server", "worker"],
      "memory": 128
    },
    {
      "name": "redis",
      "image": "redis:latest",
      "hostname": "redis",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 6379,
          "containerPort": 6379
        }
      ],
      "links": ["server", "worker"],
      "memory": 128
    }
  ]
}
